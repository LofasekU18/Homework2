@using club.soundyard.web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout_not_logged.cshtml";

}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <h2 id="title">@ViewBag.Title.</h2>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Login to system</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-outline-dark" />
            </div>
        </div>
        <p class="hide-on-small">
            @Html.ActionLink("Register as a new user", "Register")
        </p>
    }
    


</main>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}